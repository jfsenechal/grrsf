<div class="row">
    <div class="col-6">

        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ repeat.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ repeat.name }}</td>
            </tr>
            <tr>
                <th>StartTime</th>
                <td>{{ repeat.startTime|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>EndTime</th>
                <td>{{ repeat.endTime|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ repeat.endDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>RepOpt</th>
                <td>{{ repeat.repOpt|joursSemaine }}</td>
            </tr>
            <tr>
                <th>RoomId</th>
                <td>{{ repeat.roomId | room_getName }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ repeat.timestamp ? grr_repeat.timestamp|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ repeat.type }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="col-6">

        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>RepType</th>
                <td>{{ repeat.repType | periodiciteName }}</td>
            </tr>
            <tr>
                <th>CreateBy</th>
                <td>{{ repeat.createBy }}</td>
            </tr>
            <tr>
                <th>BeneficiaireExt</th>
                <td>{{ repeat.beneficiaireExt }}</td>
            </tr>
            <tr>
                <th>Beneficiaire</th>
                <td>{{ repeat.beneficiaire }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ repeat.description }}</td>
            </tr>
            <tr>
                <th>RepNumWeeks</th>
                <td>{{ repeat.repNumWeeks }}</td>
            </tr>
            <tr>
                <th>OverloadDesc</th>
                <td>{{ repeat.overloadDesc }}</td>
            </tr>
            <tr>
                <th>Jours</th>
                <td>{{ repeat.jours }}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
