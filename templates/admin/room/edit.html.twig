{% extends '@grr_admin/layout_admin.html.twig' %}

{% block title %}{{ room.name }}{% endblock %}

{% block body %}

    <div class="card bg-light mb-3">
        <div class="card-header">
            <h2>{{ room.name }}</h2>
        </div>
        <div class="card-body">

            {{ include('@grr_admin/room/_form.html.twig', {'button_label': 'form.btn.update'}) }}
        </div>
    </div>

    <br/>
    <a href="{{ path('grr_admin_area_show',{'id': room.area.id}) }}">
        <i class="fas fa-arrow-left"></i> {{ 'form.btn.cancel'|trans({}, 'actions') }}</a>

{% endblock %}
