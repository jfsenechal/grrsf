{% extends '@grr_admin/layout_admin.html.twig' %}

{% block title %}{{ 'settings.title'|trans }}{% endblock %}

{% block body %}
    <div class="card bg-light mb-3">
        <div class="card-header">
            <div class="row">
                <div class="col-8">
                    <h3>{{ 'settings.title'|trans }}</h3>
                </div>
                <div class="col-4">
                    <a class="float-right btn btn-primary" href="{{ path('grr_admin_setting_edit') }}">
                        <i class="far fa-edit"></i> {{ 'setting.edit.title'| trans({}, 'actions') }}</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Value</th>
                </tr>
                </thead>
                <tbody>
                {% for setting in settings %}
                    <tr>
                        <td>
                            {{ setting.name }}
                        </td>
                        <td>
                            {% if setting.value is iterable %}
                                {{ setting.value|join(',') }}
                            {% else %}
                                {{ setting.value }}
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
