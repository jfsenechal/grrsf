{% extends '@grr_admin/layout_admin.html.twig' %}

{% block title %}{{'authorization.room.new.title'|trans}}{% endblock %}

{% block body %}
    <div class="card bg-light mb-3">
        <div class="card-header">
            <h3>{{ 'authorization.room.new.title'|trans }}  {{ authorizationResource.area }} {% if room %} => {{ room }} {% endif %} </h3>
        </div>

        <div class="card-body">
            {# {{ authorization_resource.room }} {{ authorization_resource.user }}#}
            {{ include('security/authorization_area/_form.html.twig') }}
        </div>
    </div>

    <br />
    <a href="{{ path('grr_authorization_resource_show',{'id': room.id}) }}">
        <i class="fas fa-arrow-left"></i> {{ 'form.btn.cancel'|trans({}, 'actions') }}</a>

{% endblock %}

{% block scripts %}
    {% include '@grr_front/account/_select_room_js.html.twig' %}
{% endblock %}