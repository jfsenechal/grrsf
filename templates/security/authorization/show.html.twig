{% extends '@grr_admin/layout_admin.html.twig' %}

{% block title %}{{ 'authorization.area.title'|trans }}{% endblock %}

{% block body %}

    <div class="card bg-light mb-3">
        <div class="card-header">
            <h3>{{ 'authorization.area.title'|trans() }} {{ user }}</h3>
        </div>

        <div class="card-body">
            {% include 'security/authorization/_actions.html.twig' %}
            {% include 'security/authorization_area/_detail_permissions.html.twig' %}
        </div>
    </div>

{% endblock %}
{% block scripts %}
    <script>
        $('.btnDelete').on('click', function (event) {
            var button = $(event.relatedTarget);
            var id = $(this).data("id");
            var token = $(this).data("token");
            $("#tokenauth").val(token);
            $("#idauth").val(id);
        })
    </script>
{% endblock %}
