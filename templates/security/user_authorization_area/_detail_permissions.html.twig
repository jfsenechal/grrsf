<table class="table table-bordered">
    <thead>
    <tr>
        <th>{{ 'user.title'|trans }}</th>
        <th>{{ 'area.administrator'|trans }}</th>
        <th>{{ 'actions'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for authorization in authorizations %}
        <tr>
            <td>{{ authorization.user }}</td>
            <td>{{ authorization.isAreaAdministrator ? 'Yes' | trans : 'No' | trans }}</td>
            <td>
                <button name="coucou" type="button" class="btnDelete btn btn-danger btn-sm" data-toggle="modal"
                        data-target="#deleteAuthorization" data-id="{{ authorization.id }}"
                        data-token="{{ csrf_token('delete' ~ authorization.id) }}">
                    <i class="fas fa-trash"></i> {{ 'form.btn.delete'|trans({}, 'actions') }}
                </button>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="2">{{ 'not.found'|trans }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="deleteAuthorization" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">{{ 'modal.delete.title'|trans({}, 'actions') }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ 'authorization.delete.confirm'|trans() }}
            </div>
            <div class="modal-footer">
                <form method="post" action="{{ path('grr_user_authorization_area_delete') }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="text" name="idauth" id="idauth" value="">
                    <input type="text" name="_tokenauth" id="tokenauth" value="">
                    <button type="button" class="btn btn-secondary"
                            data-dismiss="modal">{{ 'form.btn.cancel'|trans({}, 'actions') }}</button>
                    <button type="submit" class="btn btn-danger">{{ 'form.btn.delete'|trans({}, 'actions') }}</button>
                </form>
            </div>
        </div>
    </div>
</div>


