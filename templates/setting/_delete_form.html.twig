<form method="post" action="{{ path('grr_setting_delete', {'name': setting.name}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ setting.name) }}">
    <button class="btn">Delete</button>
</form>
