{% extends 'base.html.twig' %}

{% block title %}GrrUtilisateurs index{% endblock %}

{% block body %}

    <h1>{{ 'user.index.title'|trans({}, 'actions')}}</h1>

    <a class="btn btn-primary" href="{{ path('grr_user_new') }}">{{ 'user.new.title'| trans({}, 'actions') }}</a>
    <br/> <br/>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Login</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Statut</th>
            <th>Etat</th>
            <th>DefaultListType</th>
            <th>Source</th>
        </tr>
        </thead>
        <tbody>
        {% for grr_utilisateur in grr_utilisateurs %}
            <tr>
                <td>
                    <a href="{{ path('grr_user_show', {'login': grr_utilisateur.login}) }}">{{ grr_utilisateur.login }}</a>
                </td>
                <td>{{ grr_utilisateur.nom }} {{ grr_utilisateur.prenom }}</td>
                <td>{{ grr_utilisateur.email }}</td>
                <td>{{ grr_utilisateur.statut }}</td>
                <td>{{ grr_utilisateur.etat }}</td>
                <td>{{ grr_utilisateur.defaultListType }}</td>
                <td>{{ grr_utilisateur.source }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{ 'records.notfound'|trans({}, 'actions') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
