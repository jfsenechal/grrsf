<script>
    /**
     * Met ajour la liste des rooms
     */
    $(document).ready(function () {
        var areaSelected = $('#user_edit_area_default');
        var roomsList = $('#user_edit_room_default');

        areaSelected.on('change', function (e) {
            console.log("coucou");
            $.ajax({
                url: '{{ path('grr_ajax_getrooms') }}',
                data: {
                    id: areaSelected.val()
                },
                success: function (html) {
                    if (!html) {
                        roomsList.find('select').remove();
                        roomsList.addClass('d-none');

                        return;
                    }

                    // Replace the current field and show
                    roomsList
                        .html(html)
                        .removeClass('d-none')
                }
            });
        });
    });
</script>