<div class="border2 p-2 mb-1">
    <a class="" href="{{ path('grr_front_entry_show', {'id': entry.id}) }}">
        {{ entry.name }}
    </a>
    {% if entry.description %}
        <br/>
        {# sf5 | u.truncate(20, '...') #}
        <span class="text-muted">{{ entry.description|slice(1, 20) }}</span>
    {% endif %}

             <span class="m2b-2 text-muted">
    {{ entry.startTime|date('H:i') }}
    - {{ entry.endtime|date('H:i') }}
             </span>
            <br/>
            <span class="font-weight-bold">
                {{ entry.room }}
            </span>
        </div>
        <div class="w-25 d-none d-sm-block" style="background-color: {{ entry.type.color }}">
            <span class="sr-only">{{ entry.type.name }}</span>&nbsp;&nbsp;
        </div>

<hr style="margin: 0;">