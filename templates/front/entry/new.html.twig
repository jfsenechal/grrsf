{% extends '@grr_front/layout_front.html.twig' %}

{% block title %}{{ 'entry.new.title'|trans({},'actions') }}{% endblock %}

{% block body %}

    <div class="card bg-light mb-3">
        <div class="card-header">
            <h3>{{ 'entry.new.title'|trans({},'actions') }}</h3>
        </div>

        <div class="card-body">
            {% include('@grr_front/entry/form/_form.html.twig') %}
        </div>
    </div>

    <br/>
    <a href="{{ path('grr_front_entry_index') }}"><i
                class="fas fa-arrow-left"></i> {{ 'form.btn.cancel'|trans({}, 'actions') }}</a>
{% endblock %}
{% block scripts %}
    <script src="{{ asset('js/periodicity_options_weeks.js') }}"></script>
    <script src="{{ asset('js/full_day.js') }}"></script>
    {% include '@grr_front/entry/form/_rooms_list_ajax.html.twig' %}
{% endblock %}