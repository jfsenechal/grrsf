{% extends '@grr_front/layout_front.html.twig' %}

{% block title %}Week page{% endblock %}

{% block body %}

    {% include '@grr_front/navigation/_top_navigation.html.twig' %}

    <h3 class="text-center text-success">
        {{ 'week'|trans }} du {{ week.firstDay.getTranslatedDayName }} {{ week.firstDay.day }} {{ week.firstDay.monthName|trans|lower }}
        au {{ week.lastDay.getTranslatedDayName }} {{ week.lastDay.day }}  {{ week.lastDay.monthName|trans|lower }}
    </h3>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>{{ 'ressources'|trans }}</th>
            {% for day in week.calendarDays %}
                <th>{{ day.getTranslatedDayName |trans|lower }} {{ day.day }} {{ day.monthName|trans|lower }}</th>
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        {% for roomModel in data %}
            {% set room = roomModel.room %}
            <tr>
                <td>{{ room.name }}</td>
                {% for day in roomModel.dataDays %}
                    {% include '@grr_front/week/_cell_day_data.html.twig' %}
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block scripts %}
    {% include '@grr_front/navigation/form/_menu_select.js.html.twig' %}
{% endblock %}
